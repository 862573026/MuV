<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:muv="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="popularVM"
            type="com.newx.muv.popular.vm.PopularVM" />

        <import type="me.tatarka.bindingcollectionadapter2.LayoutManagers" />

    </data>

    <LinearLayout
        android:id="@+id/layout_popular"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.newx.ui.refreshlayout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            muv:onLoadMoreCommand="@{popularVM.onLoadMoreCommand}"
            muv:onRefreshCommand="@{popularVM.onRefreshCommand}"
            muv:srlAccentColor="@color/transparent"
            muv:srlEnablePreviewInEditMode="false"
            muv:srlFixedHeaderViewId="@+id/profile">

            <com.newx.ui.refreshlayout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                muv:srlClassicsSpinnerStyle="FixedBehind" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.newx.ui.combinetransfer.observable.TBSRecyclerView
                    android:id="@+id/list_popular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingTop="@dimen/dp_30"
                    muv:itemBinding="@{popularVM.mItemBinding}"
                    muv:items="@{popularVM.mPopularList}"
                    muv:layoutManager="@{LayoutManagers.grid(2)}"></com.newx.ui.combinetransfer.observable.TBSRecyclerView>

                <com.newx.ui.combinetransfer.observer.TBRConstraintLayout
                    android:id="@+id/layout_search"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/round2rect_grey_bg"
                    android:onClick="@{()->popularVM.searchClick()}">

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_2"
                        android:background="@mipmap/icon_search"
                        muv:layout_constraintBottom_toBottomOf="parent"
                        muv:layout_constraintRight_toRightOf="@+id/layout_search_guideline"
                        muv:layout_constraintTop_toTopOf="parent" />

                    <android.support.constraint.Guideline
                        android:id="@+id/layout_search_guideline"
                        android:layout_width="@dimen/px_1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        muv:layout_constraintGuide_percent="0.4" />

                    <TextView
                        android:id="@+id/tv_popular_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:text="@string/search_text"
                        muv:layout_constraintBottom_toBottomOf="parent"
                        muv:layout_constraintStart_toStartOf="@+id/layout_search_guideline"
                        muv:layout_constraintTop_toTopOf="parent" />
                </com.newx.ui.combinetransfer.observer.TBRConstraintLayout>


            </RelativeLayout>


            <com.newx.ui.refreshlayout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                muv:srlClassicsSpinnerStyle="FixedBehind" />
        </com.newx.ui.refreshlayout.SmartRefreshLayout>

    </LinearLayout>

</layout>