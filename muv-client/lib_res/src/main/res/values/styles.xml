<resources>

    <style name="Translucent">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background_color</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColorLink">@color/text_dark_color</item>
        <item name="android:lineSpacingExtra">@dimen/dp_4</item>
    </style>

    <style name="ContentText">
        <item name="android:textSize">@dimen/font_smallest</item>
        <item name="android:textColorLink">@color/text_dark_color</item>
        <item name="android:lineSpacingExtra">@dimen/dp_4</item>
    </style>
</resources>
